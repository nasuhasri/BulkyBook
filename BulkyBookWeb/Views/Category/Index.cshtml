
@*
    - view will know that whatever we receive here is IEnumerable of type category
    - model is must be in lowercase
    - while in foreach, Model would be in uppercase
*@
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>